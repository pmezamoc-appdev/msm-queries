<h1>Actor #<%=@actor.id%></h1>



<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%=@actor.id%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.created_at)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
   <%=time_ago_in_words(@actor.updated_at)%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
    
    <% @characters.each do |record| %>
    <tr>
      <td>
      <%= Movie.where({:id => record.movie_id}).first.title%>
      </td>
      <td>
      <%= Movie.where({:id => record.movie_id}).first.year%>
      </td>
      <td>
      <%= Director.where({:id => Movie.where({:id => record.movie_id}).first.director_id}).first.name%>
      </td>
      <td>
      <%= record.name %>
      </td>
      <td>
      <a href = "/movies/<%=record.movie_id%>">Show details</a>
      </td>

    </tr>
  <%end%>
  </table>
